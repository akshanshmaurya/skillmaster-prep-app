{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start backend server",
			"type": "shell",
			"command": "pwsh.exe",
			"args": [
				"-NoProfile",
				"-Command",
				"./backend/start-backend.ps1"
			],
			"isBackground": true,
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"label": "Install backend deps",
			"type": "shell",
			"command": "pwsh.exe",
			"args": [
				"-NoProfile",
				"-Command",
				"cd backend; if (Test-Path package-lock.json) { Remove-Item package-lock.json -Force } ; npm install"
			],
			"isBackground": false,
			"problemMatcher": [],
			"group": "build"
		}
	]
}